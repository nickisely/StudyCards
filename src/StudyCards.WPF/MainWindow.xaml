<Window x:Class="StudyCards.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyCards.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Quiz">
            <local:QuizControl DataContext="{Binding Path=QuizControlVM}" />
        </TabItem>
        <TabItem Header="Add Study Card">
            <local:AddStudyCardControl DataContext="{Binding Path=AddStudyCardVM}" />
        </TabItem>
        
    </TabControl>
    
    
    
</Window>
